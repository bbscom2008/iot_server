<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.MotorFanMapper">

    <resultMap id="BaseResultMap" type="com.example.demo.entity.MotorFan">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="fan_name" property="fanName" jdbcType="VARCHAR"/>
        <result column="device_id" property="deviceId" jdbcType="BIGINT"/>
        <result column="device_num" property="deviceNum" jdbcType="VARCHAR"/>
        <result column="is_running" property="isRunning" jdbcType="INTEGER"/>
        <result column="created_time" property="createdTime" jdbcType="TIMESTAMP"/>
        <result column="updated_time" property="updatedTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 根据设备ID查询所有风扇 -->
    <select id="findByDeviceId" resultMap="BaseResultMap">
        SELECT * FROM motor_fan
        WHERE device_id = #{deviceId}
        ORDER BY id ASC
    </select>

    <!-- 根据设备编号查询所有风扇 -->
    <select id="findByDeviceNum" resultMap="BaseResultMap">
        SELECT * FROM motor_fan
        WHERE device_num = #{deviceNum}
        ORDER BY id ASC
    </select>

    <!-- 根据ID查询风扇 -->
    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM motor_fan WHERE id = #{id}
    </select>

    <!-- 新增风扇 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO motor_fan (fan_name, device_id, device_num, is_running, created_time, updated_time)
        VALUES (#{fanName}, #{deviceId}, #{deviceNum}, #{isRunning}, NOW(), NOW())
    </insert>

    <!-- 更新风扇运行状态 -->
    <update id="updateRunningStatus">
        UPDATE motor_fan
        SET is_running = #{isRunning}, updated_time = NOW()
        WHERE id = #{id}
    </update>

    <!-- 删除风扇 -->
    <delete id="deleteById">
        DELETE FROM motor_fan WHERE id = #{id}
    </delete>

    <!-- 删除设备的所有风扇 -->
    <delete id="deleteByDeviceId">
        DELETE FROM motor_fan WHERE device_id = #{deviceId}
    </delete>

</mapper>

